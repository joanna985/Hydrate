<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBackgroundColor"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hydrate"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/ageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="140dp"
        android:text="Age"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/heightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Height"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/weightLabel"
        app:layout_constraintTop_toBottomOf="@+id/genderLabel" />

    <TextView
        android:id="@+id/pregnantLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Pregnant"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/waterLabel"
        app:layout_constraintTop_toBottomOf="@+id/activityLabel" />

    <TextView
        android:id="@+id/activityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Activity"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/pregnantLabel"
        app:layout_constraintTop_toBottomOf="@+id/weightLabel" />

    <TextView
        android:id="@+id/genderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Gender"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/heightLabel"
        app:layout_constraintTop_toBottomOf="@+id/ageLabel" />

    <TextView
        android:id="@+id/weightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Weight"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/activityLabel"
        app:layout_constraintTop_toBottomOf="@+id/heightLabel" />

    <TextView
        android:id="@+id/waterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:text="Water Needed per Day"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregnantLabel" />

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="30dp"
        android:text="32"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterLabel" />

    <TextView
        android:id="@+id/ozLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="oz."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/resultLabel"
        app:layout_constraintTop_toBottomOf="@+id/waterLabel" />

    <EditText
        android:id="@+id/ageEntryText"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="130dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ageLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/pregnantCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="240dp"
        android:buttonTint="@color/white"
        android:checked="false"
        app:layout_constraintStart_toEndOf="@+id/pregnantLabel"
        app:layout_constraintTop_toBottomOf="@+id/ageEntryText" />

    <EditText
        android:id="@+id/weightEntryText"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/weightLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ftEntryText"
        android:layout_width="35dp"
        android:layout_height="44dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/heightLabel"
        app:layout_constraintTop_toBottomOf="@+id/ageEntryText" />

    <EditText
        android:id="@+id/inEntryText"
        android:layout_width="32dp"
        android:layout_height="47dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ftLabel"
        app:layout_constraintTop_toBottomOf="@+id/ageEntryText" />

    <TextView
        android:id="@+id/ftLabel"
        android:layout_width="17dp"
        android:layout_height="29dp"
        android:layout_marginTop="82dp"
        android:text="ft."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ftEntryText"
        app:layout_constraintTop_toBottomOf="@+id/ageEntryText" />

    <TextView
        android:id="@+id/inLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:text="in."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/inEntryText"
        app:layout_constraintTop_toBottomOf="@+id/ageEntryText" />

    <Spinner
        android:id="@+id/activitySpinner"
        android:layout_width="148dp"
        android:layout_height="28dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="367dp"
        android:background="@color/white"
        android:dropDownWidth="match_parent"
        app:layout_constraintStart_toEndOf="@+id/activityLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/genderSpinner"
        android:layout_width="148dp"
        android:layout_height="28dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="198dp"
        android:background="@color/white"
        android:dropDownWidth="match_parent"
        app:layout_constraintStart_toEndOf="@+id/genderLabel"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>